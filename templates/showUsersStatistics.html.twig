{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid-container d-flex justify-content-center">
        <div class="cell large-10">
            <h3>Statistiky hráče {{ app.user.getFirstName() }} {{ app.user.getLastName() }}</h3>
            <table class="table"  id="table_statistics" style="margin-top: 3em">
                <thead>
                <tr class="row ">
                    <th class="column small-2 text-center">Id uživatele</th>
                    <th class="column small-2 text-center">Úspěšné TH</th>
                    <th class="column small-2 text-center">Neúspěšné TH</th>
                    <th class="column small-2 text-center">Dva body</th>
                    <th class="column small-2 text-center">Tři body</th>
                    <th class="column small-2 text-center">Body celkem</th>
                </tr>
                </thead>
                <tbody id="table_matches">
                {% for stats in statistics %}
                    <tr class="row">
                        <td class="column small-2 text-center">{{ stats.usersId }}</td>
                        <td class="column small-2 text-center">{{ stats.successfulFt }}</td>
                        <td class="column small-2 text-center">{{ stats.unsuccessfulFt }}</td>
                        <td class="column small-2 text-center">{{ stats.twoPoints}}</td>
                        <td class="column small-2 text-center">{{ stats.threePoints }}</td>
                        <td class="column small-2 text-center">{{ stats.points }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}