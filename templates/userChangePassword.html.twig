{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="grid-container margin-left-3">
            <h2 class="text-center">Změnit heslo</h2>
            <div class="grid-x grid-padding-x">
                <div class="cell large-12">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                </div>

                <div class="cell medium-auto">
                    {{ form_row(form.plainPassword, { 'attr': { 'placeholder': 'Min. 8 znaků. Musí obsahovat velké písmeno, malé písmeno a číslici'  }}) }}
                </div>
            </div>
            <div class="text-center">
                <a href="{{ path('user-detail')}}" class="btn btn-warning">Zpět</a>
                &nbsp;
                {{ form_widget(form.save, { 'label': 'Uložit změny', 'attr': { 'class': 'btn btn-success' }}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}