{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Editace profilu</h2>
        <div class="col-sm-12 my-auto">
            <form class="w-25" method="post">
                <div class="col">
                    <label for="inputUsername">Uživatelské jméno</label>
                    <input type="text" value="hi" name="username" id="inputUsername" class="form-control" required autofocus>

                    <label for="inputEmail">Email:</label>
                    <input type="text" value="hi" name="email" id="inputEmail" class="form-control">

                    <label for="inputPhoneNumberPlayer">Telefon hráč:</label>
                    <input type="text" value="hi" name="phone_number_player" id="inputPhoneNumberPlayer" class="form-control">
                    <label for="inputPhoneNumberMother">Telefon matka:</label>
                    <input type="text" value="hi" name="phone_number_mother" id="inputPhoneNumberMother" class="form-control">
                </div>
                <div class="col">
                    <label for="inputPhoneNUmberFather">Telefon otec:</label>
                    <input type="text" value="hi" name="phone_number_father" id="inputPhoneNUmberFather" class="form-control">
                    <label for="inputAddress">Adresa:</label>
                    <input type="text" value="hi" name="address" id="inputAddress" class="form-control">
                    <label for="inputCity">Město:</label>
                    <input type="text" value="hi" name="city" id="inputCity" class="form-control">
                    <label for="inputPostalCode">PSČ:</label>
                    <input type="text" value="hi" name="postal_code" id="inputPostalCode" class="form-control">
                </div>
                <button class="btn btn-lg btn-primary col-md-12 text-center" style="margin-top: 20px" type="submit">
                    Uložit změny
                </button>
            </form>
        </div>
    </div>
{% endblock %}