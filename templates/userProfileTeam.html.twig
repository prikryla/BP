{% extends 'base.html.twig' %}

{% block title %} IS BBK - Profil hráče {{ user.getUsername() }} {% endblock %}

{% block body %}
    <h3 class="mt-1">Profil uživatele</h3>
    <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
                <div class="col-md-4 gradient-custom text-center text-white" style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                    <img
                            src="./public/images/profil.jpg"
                            alt="Logo"
                            class="img-fluid my-5"
                    />
                    <h5>{{ user.getFirstName() }} {{ user.getLastName() }}</h5>
                    <p>Admin</p>
                    {% if user.getDressNumber() %}
                    <p>Číslo dresu</p>
                    <h3>#{{ user.getDressNumber() }}
                        {% else %}{% endif %}</h3>
                </div>
                <div class="col-md-8">
                    <div class="card-body p-4">
                        <h6>Základní informace</h6>
                        <hr class="mt-0 mb-4">
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6>Email</h6>
                                <p class="text-muted">{{ user.getEmail() }}</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6>Telefon hráč</h6>
                                <p class="text-muted">{% if user.getPhoneNumberPlayer() %}{{ user.getPhoneNumberPlayer() }}{% else %}-{% endif %}</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6>Telefon matka</h6>
                                <p class="text-muted">{% if user.getPhoneNumberMother() %}{{ user.getPhoneNumberMother() }}{% else %}-{% endif %}</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6>Telefon otec</h6>
                                <p class="text-muted">{% if user.getPhoneNumberMother() %}{{ user.getPhoneNumberMother() }}{% else %}-{% endif %}</p>
                            </div>
                        </div>
                        <h6>Ostatní</h6>
                        <hr class="mt-0 mb-4">
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6>Pokuty</h6>
                                <p class="text-muted">{% if user.getFines() %}{{ user.getFines() }}<br>
                                    {% else %}-{% endif %}</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6>Číslo dresu</h6>
                                <p class="text-muted">{% if user.getDressNumber() %}{{ user.getDressNumber() }}<br>
                                    {% else %}-{% endif %}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}